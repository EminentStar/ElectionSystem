@charset "utf-8";
/* CSS Document */
.top_username{
	text-align:left;
	color: #FFFFFF; 
	font-family:"맑은 고딕";
	font-size: 16px;
	padding:3px;
}
.top_title{
	width:1400px; 
	color:#292F5C;
	background-color:white;
	font-size: 70px;	
	font-family:"맑은 고딕";
	font-weight: bold;
}
.top_title img{
 vertical-align: middle;	
}
.javatopwrap {
   width: 100%;
}

.top_wrap {
   width: 1400px;
   margin: auto;
}
.menudiv{   
   background:#b8e356;
}
.menu {
   width: 1400px;
   background-color: #9C1818;   
}

.top {
   width: 100%;
   background-color: #9C1818;
}
.middle{
	margin-top: 20px;
	margin-bottom: 20px;
	
}

body, div, ul, li {
   margin:0;
   padding:0;
   text-align: center;
}

ul, li {
   list-style-type: none;
   z-index: 1000;
}
a {
   color:#000;
   text-decoration:none;
}
/* 메인메뉴 영역 */
.menu ul {   
   width: 200px;
   height:40px;
}
/*주메뉴 상자*/
.menu li {
   position: relative;
}

.menu ul li a {
   display:block;
   font:bold 18px/40px "맑은 고딕", arial;
   color:#fff;
   text-align:center;
   text-decoration:none;
}
.menu ul li a:hover {
   color:#fff;
   background:#CF5B5B;
   text-decoration:none;
}
/* 서브메뉴 영역*/
.menu ul ul {
   display:none;
}
.menu ul li:hover ul {
   display:block;
}
.menu li li {
   width:200px;
   height:30px;
   background-color:#EBBEBE;
}
.menu li li a {
   display:block;
   color:black;
   font:bold 13px/30px "맑은 고딕", arial;
   text-align:left;
   padding-left: 10px;
   text-decoration:none;
}
.menu li li a:hover {
   height:30px;
   font-color:white;
   background:#a5cc52;
   text-decoration:none;
}
