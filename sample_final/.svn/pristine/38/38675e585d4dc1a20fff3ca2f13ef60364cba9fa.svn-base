* {
	margin:0px;
	padding:0px;
	font-family:맑은 고딕;
}
.wrap{
	width: 800px;
	margin: auto;
}

.pledgeTitle {
	background-color:#fb9e25;/*공약제목 배경색*/
	border-radius:10px; /*테두리 둥글기각*/
	padding:10px; /*공약제목 안쪽여백*/
	color:#ffffff; /*공약제목 글자색*/
	font-size:30px; /*공약제목 글자크기*/
	font-weight:bold; /*공약제목 글자 진하게*/
}
.pledgeTitle:hover {
	cursor: pointer;
	background-color:#ffc477;
}
.pledgeContent {
	padding:10px;
	background-color: #C6C;
	border-radius:10px;
}