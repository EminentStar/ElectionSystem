	<title>candidateintroduce</title>
	<link rel="stylesheet" href="http://code.jquery.com/ui/1.10.3/themes/smoothness/jquery-ui.css">
	<script src="http://code.jquery.com/jquery-1.9.1.js"></script>
	<script src="http://code.jquery.com/ui/1.10.3/jquery-ui.js"></script>
	<link rel="stylesheet" type="text/css" href="<spring:url value="/css/view/layzilla.css"/>">
	<link rel="stylesheet" type="text/css" href="<spring:url value="/css/view/candidateintroduce.css"/>">
	
	</head>
<script type="text/javascript">
		 $(function() {
			$( "#tabs" ).tabs();
			search();
		});
		 
		function search(){
			   $.get("<spring:url value="/candi/candidatesearch"/>"
			         ,function(result){
			            console.log(result.candiList);
			           
			            $("#candidatePhoto").html("");
			            $(result.candList).each(function(index,pledge){
			               console.log(pledge.cand_id);
			               var $tr = $("<tr style = 'cursor:pointer;'>");
			               $tr.append($("<td>").append(pledge.cand_id));
			               $tr.append($("<td>").append(pledge.user_name));
			               $tr.append($("<td>").append(pledge.pledge_id));
			               $tr.append($("<td>").append(pledge.pledge_content));
			               $("#ppledgeList").append($tr); 
			            });
			         });
			} 
			$("#vote").bind("click",function(){
				window.location.href="<spring:url value="/vote" />";
			});
	</script>
	<body>
		<div class="centered">
			<div class="item">
				<div>
					<div  class="content">
						<spring:message code="label.candi.introduce"/>
					</div><!-- 후보자 소개 -->
				</div>
				<br/>
				
				<div>
					<div id="candidateName" class="content">
						<div>
							<div id="candidatePhoto" class="content">
								<div style="float: left; width: 33%;">사진1</div>
								<div style="float: left; width: 33%;">사진2</div>
								<div style="float: left; width: 33%;">사진3</div>
							</div>
						</div>
						<div style="float: left; width: 33%;">기호1번 김진호</div>
						<div style="float: left; width: 33%;">기호2번 염종철</div>
						<div style="float: left; width: 33%;">기호3번 우리나</div>
					</div>
				</div>
				<br/>
				<br/>
				
				<div>
					<div class="content">
						<input name="vote" type="button" id="vote" value="투표하러 가기" />
                        <!-- 투표하러가기 -->
					</div>
				</div>
				<br/>
				      
				<div>
					<div class="content">
						<div>
							<div class="content">
								<strong>후보자&nbsp;상세 소개</strong>
							</div>
						</div>
						<div style="float:left; width:40%;">
							포스터 등록란
						</div>
						<div style="float:left; width:60%;">
							<div>약력</div>
							<div>불라불라</div>
						<div>
					</div>
				</div>
				<br/>
				
				<div>
					<div id="tabs">
						<ul>
							<li><a href="#tabs-1">공약1</a></li>
							<li><a href="#tabs-2">공약2</a></li>
							<li><a href="#tabs-3">공약3</a></li>
						</ul>
						<div id="tabs-1">
							<p>후보자공약1</p>
						</div>
						<div id="tabs-2">
							<p>후보자공약2</p>
						</div>
						<div id="tabs-3">
							<p>후보자공약3</p>
						</div>
					</div>
				</div>
			
			</div>
		</div>
	</body>
</html>