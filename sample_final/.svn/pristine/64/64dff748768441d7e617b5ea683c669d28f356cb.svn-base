@charset "utf-8";
/* CSS Document */

.wrap {
	width: 100%;
}

.top_wrap {
	width: 100%;
	margin: auto;
}
.menudiv{	
	background:#b8e356;
}
.menu {
	width: 1400px;
	background-color: #b8e356;	
}

.top {
	width: 100%;
	background-color: #FF4D4D;
}



body, div, ul, li {
	margin:0;
	padding:0;
}

ul, li {
	list-style-type: none;
	z-index: 1000;
}
a {
	color:#000;
	text-decoration:none;
}
/* 메인메뉴 영역 */
.menu ul {	
	width: 200px;
	height:40px;
}
/*주메뉴 상자*/
.menu li {
	position: relative;
}

.menu ul li a {
	display:block;
	font:bold 18px/40px "맑은 고딕", arial;
	color:#fff;
	text-align:center;
}
.menu ul li a:hover {
	color:#fff;
	background:#a5cc52;
}
/* 서브메뉴 영역*/
.menu ul ul {
	display:none;
}
.menu ul li:hover ul {
	display:block;
}
.menu li li {
	width:200px;
	height:30px;
	background-color:#FFFFE9;
}
.menu li li a {
	display:block;
	color:black;
	font:bold 13px/30px "맑은 고딕", arial;
	text-align:left;
	padding-left: 10px;
}
.menu li li a:hover {
	height:30px;
	font-color:white;
	background:#a5cc52;
}
.top center table tr td {
	color: #FFF;
	font-size: 90px;
}
