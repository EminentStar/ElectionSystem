<script type="text/javascript">
$(function(){
	$("input[name=checkconfirm]").bind('click',function(){
		$.post('<spring:url value="/vote/homecheck"/>',
		$("#homecheck").serialize(),
		function(result){
			
		
			if(result.data != null  &&  result.data.error != undefined){
				console.log(result.data.error);
			}else{
				alert("설정을 바꿨습니다.");
			}
		
		});
	});
});



